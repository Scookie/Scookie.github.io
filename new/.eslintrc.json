{
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "plugins": ["react"],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": 0,
        "strict": 0,
        "react/prop-types": [0, {"ignore": ["children"]}],
        "react/jsx-indent": [2, 4],
        "indent": [2, 4],
        "react/prefer-stateless-function": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "linebreak-style": 0
    }
}